	</GoodyHuts>
	<HandicapInfo_Goodies>
		<Delete GoodyType="GOODY_REVEAL_NEARBY_BARBS" />
	</HandicapInfo_Goodies>
	<Language_en_US>
		<Update>
			<Where Tag="TXT_KEY_GOODY_MAP"/>
			<Set Text="You discover a crudely-drawn map which outlines nearby terrain and and evidence of recent barbarian activity!" />
		</Update>
		<Update>
			<Where Tag="TXT_KEY_GOODY_CHOOSE_MAP"/>
			<Set Text="Study their maps of nearby territory and barbarians." />
		</Update>
	</Language_en_US>

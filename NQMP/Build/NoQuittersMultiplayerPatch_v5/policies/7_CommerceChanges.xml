<GameData>
	
	<!-- Commerce Opener -->
	<Policies>
		<Update>
			<Set GreatMerchantRateModifier="50" />
			<Where Type="POLICY_COMMERCE" />
		</Update>
	</Policies>
	<Policy_CapitalYieldModifiers>
		<Delete PolicyType="POLICY_COMMERCE" />
	</Policy_CapitalYieldModifiers>
	<Language_en_US>
		<Update>
			<Set Text="[COLOR_POSITIVE_TEXT]Commerce[ENDCOLOR] provides bonuses to empires focused on [ICON_GOLD] Gold.[NEWLINE][NEWLINE]Adopting Commerce allows you to earn Great Merchants 50% faster. Unlocks building Big Ben.[NEWLINE][NEWLINE]Adopting all Policies in the Commerce tree will grant you 2 additional Trade Route slots and double [ICON_GOLD] Gold from Great Merchant Trade Missions. It also allows the purchase of Great Merchants with [ICON_PEACE] Faith starting in the Industrial Era." />
			<Where Tag="TXT_KEY_POLICY_BRANCH_COMMERCE_HELP" />
		</Update>
	</Language_en_US>


	<!-- Mercantilism -->
	<Policies>
		<Update>
			<Set GridX="1" GridY="1" />
			<Where Type="POLICY_MERCANTILISM" />
		</Update>
	</Policies>
	<Policy_PrereqPolicies>
		<Delete PolicyType="POLICY_MERCANTILISM" />
	</Policy_PrereqPolicies>
	<Policy_ImprovementYieldChanges>
		<Update>
			<Set PolicyType="POLICY_MERCANTILISM" />
			<Where PolicyType="POLICY_COMMERCE_FINISHER" ImprovementType="IMPROVEMENT_TRADING_POST" YieldType="YIELD_GOLD" Yield="1" />
		</Update>
		<Row>
			<PolicyType>POLICY_MERCANTILISM</PolicyType>
			<ImprovementType>IMPROVEMENT_CUSTOMS_HOUSE</ImprovementType>
			<YieldType>YIELD_FOOD</YieldType>
			<Yield>1</Yield>
		</Row>
		<Row>
			<PolicyType>POLICY_MERCANTILISM</PolicyType>
			<ImprovementType>IMPROVEMENT_CUSTOMS_HOUSE</ImprovementType>
			<YieldType>YIELD_GOLD</YieldType>
			<Yield>4</Yield>
		</Row>
	</Policy_ImprovementYieldChanges>
	<Language_en_US>
		<Update>
			<Set Text="[COLOR_POSITIVE_TEXT]Mercantilism[ENDCOLOR][NEWLINE]+1 [ICON_RESEARCH] Science from every Mint, Market, Bank, and Stock Exchange. +1 [ICON_GOLD] Gold from every Trading Post. +1 [ICON_FOOD] Food and +4 [ICON_GOLD] Gold from every Customs House." />
			<Where Tag="TXT_KEY_POLICY_MERCANTILISM_HELP" />
		</Update>
	</Language_en_US>


	<!-- Entrepreneurship -->
	<Policies>
		<Update>
			<Set GridX="1" GridY="2" BuildingGoldMaintenanceMod="-50" TradeMissionGoldModifier="0" /> 
			<Where Type="POLICY_ENTREPRENEURSHIP" />
		</Update>
	</Policies>
	<Policy_PrereqPolicies>
		<Delete PolicyType="POLICY_ENTREPRENEURSHIP" />
		<Row>
			<PolicyType>POLICY_ENTREPRENEURSHIP</PolicyType>
			<PrereqPolicy>POLICY_MERCANTILISM</PrereqPolicy>
		</Row>
	</Policy_PrereqPolicies>
	<Policy_BuildingClassYieldChanges>
		<Update>
			<Set PolicyType="POLICY_ENTREPRENEURSHIP" />
			<Where PolicyType="POLICY_MERCHANT_NAVY" BuildingClassType="BUILDINGCLASS_NATIONAL_TREASURY" YieldType="YIELD_PRODUCTION" YieldChange="4" />
		</Update>
	</Policy_BuildingClassYieldChanges>
	<Policy_BuildingClassCultureChanges>
		<Update>
			<Set PolicyType="POLICY_ENTREPRENEURSHIP" />
			<Where PolicyType="POLICY_MERCHANT_NAVY" BuildingClassType="BUILDINGCLASS_NATIONAL_TREASURY" CultureChange="4" />
		</Update>
	</Policy_BuildingClassCultureChanges>
	<Language_en_US>
		<Update>
			<Set Text="[COLOR_POSITIVE_TEXT]Entrepreneurship[ENDCOLOR][NEWLINE]+4 [ICON_PRODUCTION] Production and +4 [ICON_CULTURE] Culture from the East India Trade Company. Maintenance paid on Buildings reduced by 50%." />
			<Where Tag="TXT_KEY_POLICY_ENTREPRENEURSHIP_HELP" />
		</Update>
	</Language_en_US>


	<!-- Silk Road (old Wagon Trains) -->
	<Policies>
		<Update>
			<Set GridX="3" GridY="1" LandTradeRouteGoldChange="400" SeaTradeRouteGoldChange="200" />
			<Where Type="POLICY_CARAVANS" />
		</Update>
	</Policies>
	<Policy_PrereqPolicies>
		<Delete PolicyType="POLICY_CARAVANS" />
	</Policy_PrereqPolicies>
	<Language_en_US>
		<Update>
			<Set Text="Silk Road" />
			<Where Tag="TXT_KEY_POLICY_CARAVANS" />
		</Update>
		<Update>
			<Set Text="[COLOR_POSITIVE_TEXT]Silk Road[ENDCOLOR][NEWLINE]+4 [ICON_GOLD] Gold from all your foreign land and sea trade routes. Maintenance paid on Roads and Railroads reduced by 50%." />
			<Where Tag="TXT_KEY_POLICY_CARAVANS_HELP" />
		</Update>
	</Language_en_US>


	<!-- Mercenary Army -->
	<Policies>
		<Update>
			<Set GridX="5" GridY="1" />
			<Where Type="POLICY_TRADE_UNIONS" />
		</Update>
	</Policies>
	<Policy_PrereqPolicies>
		<Delete PolicyType="POLICY_TRADE_UNIONS" />

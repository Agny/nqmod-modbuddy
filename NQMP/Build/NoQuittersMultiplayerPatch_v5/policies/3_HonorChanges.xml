	<!-- HONOR OPENER -->
	<Policies>
		<Update>
			<Set CultureFromKills="100" CultureFromBarbarianKills="0" />
			<Where Type="POLICY_HONOR" />
		</Update>
	</Policies>
	<Buildings>
		<Update>
			<Where Type="BUILDING_STATUE_ZEUS"/>
			<Set PolicyBranchType="NULL"/>
